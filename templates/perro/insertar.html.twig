{% extends 'base.html.twig' %}

{% block title %}Insertar nuevo 🐶
{% endblock %}

{% block body %}
	<div class="row d-flex justify-content-center align-items-center mt-3">
	<div class="col-12">
		<h1 class="text-center">Formulario</h1>
	</div>
		{% include "comunes/_mensajes.html.twig" %}
		<div class="col-12 col-md-6">
			<div class="card text-white bg-dark mb-3">
				<div class="card-header">Registra a un nuevo perrito! 🐶</div>
				<img class="card-img-top p-3" src="/img/register-perro.jpg" alt="foto formulario de registro">
				<div
					class="card-body p-3">
					{# formulario #}
					{{ form_start(perroForm, {'attr': {'novalidate':'novalidate'}}) }}
					{{ form_widget(perroForm) }}

					<button type="submit" class="btn btn-warning">Guardar!</button>
					{{ form_end(perroForm) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
