{% extends 'base.html.twig' %}

{% block title %}Insertar nuevo 🐶
{% endblock %}

{% block body %}
	<div class="row d-flex justify-content-center mt-3">
		<h1 class="m-3 text-center text-md-start">Formulario</h1>
		{% include "comunes/_mensajes.html.twig" %}
		<div class="col-md-6">
			<img src="/img/register-perro.jpg" class="img-fluid rounded-top" alt="Foto del registro">
		</div>
		<div class="col-md-6 d-flex flex-column align-items-center">
			<div class="card bg-light mb-3">
				<div class="card-header">Registra a un nuevo perrito! 🐶</div>
				<div class="card-body p-3">
					{# formulario #}
					{{ form_start(perroForm, {'attr': {'novalidate':'novalidate'}}) }}
					{{ form_widget(perroForm) }}

					<button type="submit" class="btn btn-warning">Guardar!</button>
					{{ form_end(perroForm) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
