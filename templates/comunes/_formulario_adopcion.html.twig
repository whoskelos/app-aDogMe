{% extends 'base.html.twig' %}

{% block title %}Adoptando 🐶
{% endblock %}

{% block body %}
	<div class="row d-flex justify-content-center mt-3">
		<h1 class="text-center">Estas adoptando a 🐶</h1>
		<div class="col-md-6">
			{# foto del perro #}
			<img src="/uploads/fotos/{{ perro.foto }}" class="img-fluid rounded-top" alt="Foto del perro">
			<h1 class="text-center">{{ perro.nombre }}</h1>
		</div>
		<div class="col-md-6 d-flex flex-column align-items-center">
			<div class="card bg-light mb-3" style="width:30rem">
				<div class="card-header">Formulario de adopción 🐶</div>
				<div class="card-body p-3">
					{# formulario #}
					{{ form_start(form, {'attr': {'novalidate':'novalidate'}}) }}
					{{ form_widget(form) }}

					<button type="submit" class="btn btn-warning">Guardar!</button>
					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
