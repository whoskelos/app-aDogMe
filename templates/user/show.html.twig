{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<h1 class="my-3">Detalles de: {{ user.nombre }}</h1>

	<table class="table table-dark">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Roles</th>
				<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
			</tr>
			<tr>
				<th>Password</th>
				<td>{{ user.password }}</td>
			</tr>
		</tbody>
	</table>

	<div class="mb-3">
		<a class="" href="{{ path('app_user_index') }}">Volver a la lista</a>
	</div>
	{{ include('user/_delete_form.html.twig') }}

{% endblock %}
